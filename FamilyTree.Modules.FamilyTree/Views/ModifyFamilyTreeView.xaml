<UserControl x:Class="FamilyTree.Modules.FamilyTree.Views.ModifyFamilyTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True"
             Height="200" Width="200" Background="White">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0"
               Content="Családfa módosítása" HorizontalContentAlignment="Center"
               FontSize="17" FontWeight="Bold"/>
        <Label Grid.Row="1"
               Margin="10"
               Content="Családfa neve"/>
        <TextBox Grid.Row="2"
                 Margin="10" Text="{Binding FamilyTree.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        <Button Grid.Row="3"
                Margin="10"
                Content="Mentés" Command="{Binding ModifyCommand}"/>
    </Grid>
</UserControl>
