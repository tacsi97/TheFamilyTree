<UserControl x:Class="FamilyTree.Modules.Main.Views.NavigationMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
             xmlns:prism="http://prismlibrary.com/"             
             prism:ViewModelLocator.AutoWireViewModel="True">
    <ListView x:Name="menuItems" ItemsSource="{Binding MenuItems}">
        <i:Interaction.Triggers>
            <i:EventTrigger EventName="SelectionChanged">
                <i:InvokeCommandAction Command="{Binding SelectCommand}" CommandParameter="{Binding ElementName=menuItems, Path=SelectedItem}"/>
            </i:EventTrigger>
        </i:Interaction.Triggers>
        <ListView.ItemTemplate>
            <DataTemplate>
                <TextBlock Text="{Binding Caption}"/>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</UserControl>
